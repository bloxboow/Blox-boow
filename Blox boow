<script>
    let cart = [];
    let total = 0;
    // O seu link de Webhook fixado no sistema:
    const WEBHOOK_URL = "https://discord.com/api/webhooks/1466873848875061258/US-251gFKPtONW0j7WxwZQeLUdyAbjbPAL6NgZ-ptH7IwX3pSTdmGLecotmlJJ2MivZn";
    
    let config = JSON.parse(localStorage.getItem('blox_config')) || { discord: "", pix: "N√£o definida", produtos: [] };

    function init() {
        renderShop();
        document.getElementById('pixDisplay').innerText = config.pix;
    }

    function unlockAdmin() {
        if(prompt("Senha:") === "pablo08102009@") document.getElementById('adminPanel').style.display = 'block';
    }

    function lockAdmin() { document.getElementById('adminPanel').style.display = 'none'; }

    function renderShop() {
        const container = document.getElementById('shop-items');
        container.innerHTML = config.produtos.map((p, i) => `
            <div class="product">
                <span>${p.nome} - R$ ${p.preco}</span>
                <button class="btn-add" onclick="addToCart('${p.nome}', ${p.preco})">+</button>
            </div>
        `).join('');
    }

    function saveConfigs() {
        const d = document.getElementById('adminDiscord').value;
        const p = document.getElementById('adminPix').value;
        const n = document.getElementById('itemName').value;
        const v = document.getElementById('itemPrice').value;
        if(d) config.discord = d;
        if(p) config.pix = p;
        if(n && v) config.produtos.push({nome: n, preco: parseInt(v)});
        localStorage.setItem('blox_config', JSON.stringify(config));
        location.reload();
    }

    function addToCart(nome, preco) {
        cart.push({nome, preco});
        total += preco;
        updateCart();
    }

    function updateCart() {
        document.getElementById('cart-list').innerHTML = cart.map((item, i) => `
            <div class="cart-item"><span>${item.nome}</span></div>
        `).join('');
        document.getElementById('totalDisplay').innerText = `R$ ${total}`;
    }

    async function enviarAvisoDiscord(codigo) {
        const dataAtual = new Date();
        const msg = {
            embeds: [{
                title: "üö® NOVO PEDIDO - BLOX BOOW",
                description: "Um cliente acaba de gerar um c√≥digo de pagamento!",
                color: 5814783,
                fields: [
                    { name: "üî¢ C√≥digo do Pedido", value: `\`${codigo}\``, inline: true },
                    { name: "üí∞ Valor Total", value: `**R$ ${total}**`, inline: true },
                    { name: "üõí Itens Comprados", value: cart.map(i => i.nome).join(', ') },
                    { name: "üïí Hor√°rio do Pedido", value: dataAtual.toLocaleString('pt-BR'), inline: false }
                ],
                thumbnail: { url: "https://i.postimg.cc/JhSgZK5H/LOGO-GIF.gif" },
                footer: { text: "Sistema de Vendas Blox Boow | Pablo" },
                timestamp: dataAtual
            }]
        };

        try {
            await fetch(WEBHOOK_URL, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(msg)
            });
            console.log("Aviso enviado!");
        } catch (e) {
            console.error("Erro no Webhook", e);
        }
    }

    function irParaPagamento() {
        if(cart.length === 0) return alert("Carrinho vazio!");
        const cod = 'BOOW-' + Math.random().toString(36).substr(2, 4).toUpperCase();
        document.getElementById('codeDisplay').innerText = cod;
        document.getElementById('totalPay').innerText = `R$ ${total}`;
        
        enviarAvisoDiscord(cod); // DISPARA O AVISO PARA O SEU DISCORD
        
        showPage('page-pay');
    }

    function irParaDiscord() { showPage('page-final'); }
    function abrirDiscord() { window.open(config.discord, '_blank'); }
    function showPage(id) {
        document.querySelectorAll('.step-page').forEach(p => p.classList.remove('active'));
        document.getElementById(id).classList.add('active');
    }

    window.onload = init;
</script>
</body>
</html>
